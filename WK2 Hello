using UnityEngine;
using System.Collections;

public class Hello : MonoBehaviour {
	public string myName;

	public void Main ()
	{
		SayHello (myName);
		SayGoodbye ();
		}
	public void SayHello (string name)
	{
		print ("Hi " + myName); //You need to use 'name' here or you are bypassing the whole point of passing
	}				//the data from myName to name.

	public void SayGoodbye ()
	{
		print ("Bye");
	}
	// Use this for initialization
	void Start () {
	
	}

	// Update is called once per frame
	void Update () {
	
	}
}
